APP_NAME=skeleton
APP_ENV=dev

DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=hyperf
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

REDIS_HOST=localhost
REDIS_AUTH=(null)
REDIS_PORT=6379
REDIS_DB=0

# CORS
# Comma-separated allowlist, e.g. https://admin.example.com,https://www.example.com
# Use * only when you don't need credentials (cookies).
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=false

# Upload (application-level validation)
UPLOAD_MAX_SIZE_MB=128
UPLOAD_STRICT_MIME=false
